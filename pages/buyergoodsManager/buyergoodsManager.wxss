page {
  height: 100%;
}

.container {
  background: #f9f9f9;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.title {
  width: 100%;
  height: 100rpx;
  background: white;
  display: flex;
  
  align-items: center;
  justify-content: space-around;
}
.title-sel {

  display: flex;
  width: 30%;
  flex-direction: column;
  align-items: center;
}
.in-title{
display: inline-block;
/* color: #666; */
height: 40px;
line-height: 40px;
box-sizing: border-box;
margin: 0 10px;
}
.title-sel.active .in-title {

border-bottom: 6rpx solid #ab2b2b;
color: #ab2b2b;

}
.title-sel.active .in-title text{
  
}
/*  */
.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.catalog .nav .item.active {
  color: #ab2b2b;
  font-size: 36rpx;
  border-left: 6rpx solid #ab2b2b;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 0 30rpx 0 30rpx;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.catalog .bd .item {
  display: block;
  float: left;
  height: 216rpx;
  width: 144rpx;
  margin-right: 34rpx;
}

.catalog .bd .item.last {
  margin-right: 0;
}

.catalog .bd .item .icon {
  height: 144rpx;
  width: 144rpx;
}

.catalog .bd .item .txt {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  height: 72rpx;
  width: 144rpx;
}

/* 商品列表 */
.item-box{
background-color: #FFF;
position: relative;
border-bottom: 1px solid #EDEDED;
padding: 10rpx;
display: flex;
justify-content: center;
flex-direction: column;

}
.goods-box{
  flex: 1;
  height: 100%;
  padding-bottom: 10rpx;
  border-bottom: 1px dashed #dfdfdf;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goods-image{
  height: 130rpx;
  width: 130rpx;
  border: 1px solid #EDEDED;
  border-radius: 8px;
}
.info-box{
  justify-content: space-between;
  height: 130rpx;
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.info-box-title{
  font-size: 28rpx;
color: #262626;
}
.price-box{
  align-items: flex-end;
  display: flex;
flex-direction: row;
}
.major-lg{
  font-size: 30rpx;
  color: #FF6200;
}
.muted-xs-ml10{
  font-size: 24rpx;
  color: #A3A3A3;
  margin-left: 10rpx;
}
.row-between-mt10{
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.muted-mr20-xs{
  font-size: 24rpx;
  color: #A3A3A3;
  margin-right: 20rpx;
}

/* 底部导航栏 */
.buttom-tap{
width: 100%;
height: 100rpx;
z-index: 100;
position: fixed;
bottom: 0;
justify-content: center;
display: flex;
flex-direction: row;
align-items: center;
}
.buttom-tap-left{
background-color: #FFF;
border-top: 1px solid #EDEDED;
height: 100%;
width: 50%;
font-size: 32rpx;
display: flex;
justify-content: center;
align-items: center;

}
.buttom-tap-right{
background-color: #C91623;
border-top: 1px solid #EDEDED;
height: 100%;
width: 50%;
color:white;
font-size: 32rpx;
display: flex;
justify-content: center;
align-items: center;
}
