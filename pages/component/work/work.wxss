}
.xl{
  font-size: 32rpx;
}
.sm{
  font-size: 26rpx;
}
.shop-box {
  background-color: #C91623;
  padding-left: 20rpx;
  color: white;
  padding-top: 40rpx;

}
.shop-box text { color: white; }

.row-between {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.sm{
