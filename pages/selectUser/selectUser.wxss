

.entrance {
  height: 100%;
  
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 
.select_background{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 400rpx;
  background-image:linear-gradient(#FFFF00, #FFD700);
 
  align-items: center;


}

.brand_img{
 width: 125rpx;
 height: 125rpx;
 /* border-radius: 50%; */
 margin-top: 100rpx;
}


.select_background .brand_text{
  margin-top: 50rpx;
  font-size: 35rpx;
  font-weight: bolder;
  margin: 0 auto;
  padding-top: 35rpx;

}

.selectbutton2{
   width: 90%;
   line-height:100rpx;
   margin-top: 50rpx;
   height: 98rpx;
   border-radius: 10rpx;
   font-size: 40rpx;
   font-weight:lighter;
   opacity: 0;
   position: absolute;

}
.title {
  width: 100%;
  height: 100rpx;
  background: white;
  display: flex;
  
  align-items: center;
  justify-content: space-around;
}

 
.title-sel {
  color: #24272c;
  font-size: 35rpx;
  line-height: 63rpx;

  display: flex;
  width: 30%;
  flex-direction: column;
  align-items: center;
}
.title-sel.active{
  color: #ab2b2b;
  font-size: 40rpx;
  border-bottom: 6rpx solid #ab2b2b;

}
.SwitchCard{
  flex: 1;
  display: flex;
  width: 100%;
  height: 750rpx;
}

.SwitchCard .tab{
  width: 100%;
  justify-content: center;
}
.SwitchCard .tab .tabItem{
  display: inline-block;
  width: 20%;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  background-color: white;
}
.swiper{
  flex: 1;
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.input_area{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.input{
  display: flex;
  align-items: center;
  width: 100%;
  padding-bottom: 30rpx;
  padding-top: 15rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  border-bottom: 1px inset grey;
}
.login_image{ 
  width: 250rpx;
  height: 250rpx;
  margin-top: 30rpx;
}
.login_image_user{
  width: 230rpx;
  height: 230rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;

}
.text_login{
 font-size: 30rpx;
}
.weixin_login{
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 250rpx;
  
}
