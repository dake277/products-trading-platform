/* 商品分类 */


.slider-panel-cover{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background-color: black;
    -webkit-filter:opacity(0.6);
    z-index: 100000;
  }

 .slider-panel-box{
    position: fixed;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
    z-index: 100000;
    background-color:#F8F8F8;
    transform: translateY(150%);
    transition: all 0.4s ease;
    padding-bottom: 20rpx;
    overflow-y: scroll;
 }
  .slider-panel-box .header-box{
    text-align: center;
    padding: 30rpx 0 10rpx 0;
  }
  .header-box  .title-box view{
      font-size: 28rpx;
    color: #262626;

    }

  .header-box .close-box{
    width: 100rpx;
    position: absolute;
    right: 10rpx;
    top:30rpx;
  }
  .close-box-icon{
    height: 20px;
    width: 20px;
    vertical-align: middle;
    margin-top: -6px;

    }
  .slider-panel-box  .content-box{
      max-height:750rpx;
    }
  
  /* 列表 */
  .slider-panel-box .content-box {
    max-height: 750rpx;
  }


  .slider-panel-show{
    transform: translateY(0);
  }
  .weui-cells-form-buttom{
    border-bottom: 1px solid #EDEDED;
    margin-top: 0;
  }
  .weui-check {
position: absolute;
left: -9999px;
}
.weui-icon-radio {
margin-left: 3.2px;
margin-right: 3.2px;
}
.weui-cell__ft-my {
color: transparent;
text-align: right;

}


