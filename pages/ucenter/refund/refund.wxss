/* 遮罩层 */
.slider-panel-cover{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background-color: black;
    -webkit-filter:opacity(0.6);
    z-index: 100000;
  }

 .slider-panel-box{
    position: fixed;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
    z-index: 100000;
    background-color:#F8F8F8;
    transform: translateY(150%);
    transition: all 0.4s ease;
    padding-bottom: 20rpx;
    overflow-y: scroll;
 }
